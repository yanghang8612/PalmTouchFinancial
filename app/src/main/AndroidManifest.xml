<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.huachuang.palmtouchfinancial">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MyApplication">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.MainNoActionBar" />
        <activity
            android:name=".activity.CreditCardApplyActivity"
            android:label="@string/title_activity_credit_card_apply" />
        <activity
            android:name=".activity.PersonalInfoActivity"
            android:label="@string/title_activity_personal_info" />
        <activity
            android:name=".activity.RateActivity"
            android:label="@string/title_activity_rate" />
        <activity
            android:name=".activity.ProfitActivity"
            android:label="@string/title_activity_profit" />
        <activity
            android:name=".activity.RealNameInfoActivity"
            android:label="@string/title_activity_real_name_info" />
        <activity
            android:name=".activity.DebitCardActivity"
            android:label="@string/title_activity_debit_card" />
        <activity
            android:name=".activity.DistrictActivity"
            android:label="@string/title_activity_district" />
        <activity
            android:name=".activity.SpecificApplyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.WebViewActivity"
            android:label="@string/title_activity_web_view" />
        <activity
            android:name=".activity.UserAgreementActivity"
            android:label="@string/title_activity_user_agreement" />
        <activity
            android:name=".activity.AboutUsActivity"
            android:label="@string/title_activity_real_about_us" />
        <activity
            android:name=".activity.AgentManagerActivity"
            android:label="@string/title_activity_agent_manager" />
        <activity
            android:name=".activity.ForceJumpActivity"
            android:theme="@style/AppTheme.Transparent" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
    </application>

</manifest>