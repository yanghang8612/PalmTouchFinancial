<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <com.youth.banner.Banner
        android:id="@+id/ad_carousel_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_carousel_height"
        android:clipToPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_header_height"
        android:background="@color/white">

        <TextView
            android:id="@+id/main_apply_for_credit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@drawable/ic_credit_card_apply"
            android:drawablePadding="@dimen/main_header_padding"
            android:text="@string/main_apply_for_credit_card"
            android:textColor="@color/black"
            android:textSize="@dimen/main_header_text_size" />

        <include layout="@layout/vertical_line" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@drawable/ic_loan_apply"
            android:drawablePadding="@dimen/main_header_padding"
            android:text="@string/main_apply_for_loan"
            android:textColor="@color/black"
            android:textSize="@dimen/main_header_text_size" />

        <include layout="@layout/vertical_line" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:drawableTop="@drawable/ic_mobile_payment"
            android:drawablePadding="@dimen/main_header_padding"
            android:text="@string/main_mobile_payment"
            android:textColor="@color/black"
            android:textSize="@dimen/main_header_text_size" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/main_margin"
        android:layout_marginBottom="@dimen/main_margin"
        android:background="@color/white">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/main_share_app"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_share_app"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_my_shopping_mall"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_mall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_my_shopping_mall"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_insurance"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_loan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_insurance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_etc"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_etc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_etc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/main_divider_margin"
            android:layout_marginRight="@dimen/main_divider_margin"
            android:background="@color/divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/main_mobile_phone_recharge"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_charge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_mobile_phone_recharge"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_movie_ticket"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_movie" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_movie_ticket"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_fuel_card"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_gas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_fuel_card"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_enjoy_myself"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/main_image_size"
                    android:layout_height="@dimen/main_image_size"
                    android:src="@drawable/ic_all"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/main_item_margin"
                    android:text="@string/main_all"
                    android:textColor="@color/black"
                    android:textSize="@dimen/main_content_text_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>