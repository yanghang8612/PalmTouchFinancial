<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huachuang.palmtouchfinancial.activity.RateActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/rate_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/rate_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_activity_rate"
                android:textSize="@dimen/toolbar_title_size"
                android:textColor="@color/white"/>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="银联"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="T1/D0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="易联"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="T1/D0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="融宝"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="T1/D0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="扫码支付宝"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="T1/D0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="银联快捷"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="T1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="民生"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="T1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="苏宁"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="D0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/rate_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.48%"
            android:textColor="@color/black" />

    </LinearLayout>

    <include layout="@layout/horizontal_line_margin15dp" />

</LinearLayout>
